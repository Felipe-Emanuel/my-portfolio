{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@util/*": ["./src/components/util/*"],
      "@animations/*": ["./src/components/animations/*"],
      "@icons/*": ["./src/components/icons/*"],
      "@menu/*": ["./src/components/layout/menu/*"],
      "@layout/*": ["./src/components/layout/*"],
      "@container/*": ["./src/components/containers/*"],
      "@hooks/*": ["./src/data/hooks/*"],
      "@contexts/*": ["./src/data/contexts/*"],
      "@services/*": ["./src/data/services/*"],
      "@functions/*": ["./src/functions/*"],
      "@models/*": ["./src/models/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src/pages/projectDetail/[name]"],
  "exclude": ["node_modules"]
}
